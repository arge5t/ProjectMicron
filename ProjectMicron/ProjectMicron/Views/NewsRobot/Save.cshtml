@model ProjectMicron.Domain.ViewModels.New.NewsRobotViewModel


@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Save</h1>

<form style="margin-top:80px;" asp-action="Save" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" type="text">
    </div>


    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>



    <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
</form>